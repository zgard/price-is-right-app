<!-- Function with random product -->
<div class="container-fluid text-center">
    <h1>
        Welcome to the price is right!
    </h1>

    <!-- <div>You have <span id="time">01:00</span>! Good luck!</div>  -->

    <div class="row justify-content-center">
        <div class="col-sm-6 d-flex">
            <div class="card text-center mx-auto mt-5 bg-light" style="width: 32rem; border-radius: 5px; border: 3px solid">
                <img class="card-img-top" src="<%= product.details.tradeIdentifiers[0].images[0] %>" alt="">  
                <h5> True price
                    <%= product.pricing.price %>
                </h5>
                <h3>
                    <%= product.details.name %>
                </h3>
                <div class="row my-2 mx-auto">
                    <div class="col-sm"> 
                        <form method="POST" action="/answer">
                            <input type="hidden" name="correctPrice" value="<%= product.pricing.price %>">
                            <input class="btn btn-primary" type="submit" name="answer" value=<%= product.prices[0][0]%>>
                        </form>
                    </div>
                    <div class="col-sm">
                        <form method="POST" action="/answer">
                            <input type="hidden" name="correctPrice" value="<%= product.pricing.price %>">
                            <input class="btn btn-primary" type="submit" name="answer" value=<%= product.prices[0][1]%>>
                        </form>
                    </div>
                    <div class="col-sm">
                        <form method="POST" action="/answer">
                            <input type="hidden" name="correctPrice" value="<%= product.pricing.price %>">
                            <input class="btn btn-primary" type="submit" name="answer" value=<%= product.prices[0][2]%>>
                        </form>
                    </div>
                    <div class="col-sm">
                        <form method="POST" action="/answer">
                            <input type="hidden" name="correctPrice" value="<%= product.pricing.price %>">
                            <input class="btn btn-primary" type="submit" name="answer" value=<%= product.prices[0][3]%>>
                        </form>
                    </div>
                </div>
                <form method="POST" action="/completed">
                    <input class="btn btn-primary btn-lg btn-block" type="submit" name="endGame" value="End Game"></input>
                </form>
            </div>
        </div>
    </div>
